<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GrupActivity">

    <TextView
        android:textSize="17dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grup"/>

    <RadioGroup
        android:id="@+id/grup"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="160dp">
        <RadioButton
            android:id="@+id/grup_a"
            android:text="Grup A"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/grup_b"
            android:text="Grup B"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/grup_c"
            android:text="Grup C"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/grup_d"
            android:text="Grup D"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/grup_spv"
            android:text="Grup SPV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RadioGroup>

    <TextView
        android:textSize="17dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shift"/>

    <RadioGroup
        android:id="@+id/shift"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/shift_1"
            android:text="Shift 1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/shift_2"
            android:text="Shift 2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/shift_3"
            android:text="Shift 3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RadioGroup>

    <Button
        android:onClick="toBarcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selanjutnya"
        android:layout_marginHorizontal="20dp"/>
</LinearLayout>